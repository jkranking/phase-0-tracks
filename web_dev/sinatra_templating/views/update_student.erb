<% student = @student %>

<form action="/update/<%= student[0] %>" method="POST", class="form-horizontal">

  <div class="form-group">
    <label for="inputName" class="col-sm-1 control-label">Name</label>
    <div class="col-sm-4">
      <input type="text", class="form-control", name="name", value="<%= student[1] %>">
    </div>
  </div>

   <div class="form-group">
    <label for="inputCampus" class="col-sm-1 control-label">Campus</label>
    <div class="col-sm-4">
      <input type="text", class="form-control", name="campus", value="<%= student[2] %>">
    </div>
  </div>

   <div class="form-group">
    <label for="inputName" class="col-sm-1 control-label">Age</label>
    <div class="col-sm-4">
      <input type="text", class="form-control", name="age", value="<%= student[3] %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-10">
      <button type="submit" class="btn btn-default">Update</button>
    </div>
  </div>
</form>
